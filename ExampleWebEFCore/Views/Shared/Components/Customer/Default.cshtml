@model CustomerModel
<form method="post">
    <div class="mb-3">
        <label for="tbName">Name</label>
        <input type="text" class="form-control" id="tbName" name="Name" value="@Model.Name">
    </div>
    <div class="mb-3">
        <label for="tbLastName">Last Name</label>
        <input type="text" class="form-control" id="tbLastName" name="LastName" value="@Model.LastName">
    </div>
    <input type="hidden" id="tbId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
