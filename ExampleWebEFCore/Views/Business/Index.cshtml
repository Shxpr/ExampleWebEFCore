@{
    List<NavModel> navModels = new List<NavModel>();
    navModels.Add(new NavModel
            {
                IsActive = false,
                IsHidden = false,
                Text = "Home"
            });

    navModels.Add(new NavModel
            {
                IsActive = true,
                IsHidden = false,
                Text = "Business"
            });

    navModels.Add(new NavModel
            {
                IsActive = false,
                IsHidden = true,
                Text = "Invoice"
            });

    navModels.Add(new NavModel
            {
                IsActive = false,
                IsHidden = true,
                Text = "Customer"
            });
    GridViewModel businessGv = new GridViewModel();
    businessGv.Columns = new List<string>();    
    businessGv.StyleHeader = "table table-striped table-bordered";
    businessGv.Columns.Add("Id");
    businessGv.Columns.Add("Name");
    businessGv.Columns.Add("Address");
}

@await Component.InvokeAsync(typeof(NavViewComponent), navModels);
@await Component.InvokeAsync(typeof(GridViewComponent), businessGv)

