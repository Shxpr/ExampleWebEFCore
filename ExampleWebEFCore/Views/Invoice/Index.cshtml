@{
    List<NavModel> navModels = new List<NavModel>();
    navModels.Add(new NavModel
            {
                IsActive = false,
                IsHidden = false,
                Text = "Home"
            });

    navModels.Add(new NavModel
            {
                IsActive = false,
                IsHidden = true,
                Text = "Business"
            });

    navModels.Add(new NavModel
            {
                IsActive = true,
                IsHidden = false,
                Text = "Invoice"
            });

    navModels.Add(new NavModel
            {
                IsActive = false,
                IsHidden = true,
                Text = "Customer"
            });
    GridViewModel invoiceGv = new GridViewModel();
    invoiceGv.Columns = new List<string>();
    invoiceGv.StyleHeader = "table table-striped table-bordered";
    invoiceGv.Columns.Add("Id");
    invoiceGv.Columns.Add("Number");
    invoiceGv.Columns.Add("Customer Id");
    invoiceGv.Columns.Add("Business Id");
    invoiceGv.Columns.Add("Business");
}

@await Component.InvokeAsync(typeof(NavViewComponent), navModels);
@await Component.InvokeAsync(typeof(GridViewComponent), invoiceGv)